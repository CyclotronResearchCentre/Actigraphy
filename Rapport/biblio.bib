issn = {0161-8105},
journal = {Sleep},
keywords = {Adolescent,Adult,Algorithms,Electrophysiology,Electrophysiology: instrumentation,Female,Humans,Male,Polysomnography,Polysomnography: instrumentation,Reproducibility of Results,Sleep,Sleep: physiology},
month = feb,
number = {1},
pages = {81--5},
pmid = {12627737},
title = {{Further validation of actigraphy for sleep studies.}},
